                margin-bottom: 8px;
            }

            
            /* Listings */
            ul {
                list-style-type: none;
                padding-left: 0px;
                margin-bottom: 10px;
            }

            li {
                padding: 3px 0px;
            }

            /* Buttons */
            button, input {
                padding: 5px 10px;
                border-radius: 5px;
                border: 1px solid #cccccc;
                margin-right: 5px;
                margin-bottom: 8px
            }

            button {
                background-color: #007bff;
                color: #ffffff;
                cursor: pointer;
            }

            .empty {
                border: 1px dashed #aaaaaa;
