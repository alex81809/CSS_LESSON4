                background-color: #f9f9f9;
                margin-top: 8px;
            }

            a {
                text-decoration: none;
                color: #31557a;
            }

            /* Advanced Selectors */
            ul>li {
                color: rgb(45, 9, 9);
            }

            /* Child Combinator */
            h2+p {
                background-color: green;
                padding: 2px;
            }
        
            /* Attribute Selector */
            .card span {
                color: violet;
                font-weight:bold;
            }

            /* Psuedo-classes */
            button:hover {
                background-color: red;
            }

            li:last-child {
                font-weight: bold;
                font-size: 15px;
                color:#ff0000;
                font-style: italic;
            }

            /* :target */
            button:active {
                color: yellow;
            }

            
            li:not(first-child) {
                font-size: 20px;
                font-weight:bold;
                color: blue;
            }

            h2::before {
                content: "Pseudo Elements "; 
                color: aqua;
            }

            h2::after {
                content: "sample";
                color: purple;
                font-size: 20px;
            }

            li:first-child {
                font-weight: bold;
                font-size: 30px;
                color: rgb(0, 255, 85);
            }

            input:focus {
                background-color: lightblue;
                border-color: blue;
            }

            ::selection {
                background-color: tomato;
                color: slateblue;
            }

        </style>
